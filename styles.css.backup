    clip-path: polygon(1% 0%, 5% 1%, 10% 0%, 15% 2%, 20% 0%, 25% 1%, 30% 0%, 35% 1.5%,
            40% 0%, 45% 1%, 50% 0%, 55% 1.5%, 60% 0%, 65% 1%, 70% 0%, 75% 1.5%,
            80% 0%, 85% 1%, 90% 0%, 95% 1.5%, 99% 0%, 100% 2%,
